{
  "version": 2,
  "name": "physical-ai-backend",
  "builds": [
    {
      "src": "src/api/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/api/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "COHERE_API_KEY": "@cohere-api-key"
  }
}
